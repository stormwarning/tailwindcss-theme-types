{
  "name": "tailwindcss-theme-types",
  "version": "0.1.0",
  "license": "ISC",
  "author": "Jeff",
  "main": "dist/index.js",
  "bin": {
    "theme-types": "bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsdx build --entry src/cli.ts --target node --format cjs",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "start": "tsdx watch",
    "test": "tsdx test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "fast-glob": "3.2.4",
    "import-from": "3.0.0",
    "json-schema-to-typescript": "9.1.1",
    "normalize-path": "3.0.0",
    "postcss-selector-parser": "6.0.2",
    "resolve-from": "5.0.0",
    "sade": "1.7.3",
    "tailwindcss": "2.0.2",
    "tiny-invariant": "1.1.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.2.7",
    "@changesets/cli": "2.10.x",
    "@types/normalize-path": "3.0.x",
    "@typescript-eslint/eslint-plugin": "4.1.x",
    "@typescript-eslint/parser": "4.1.x",
    "@zazen/eslint-config": "2.0.x",
    "eslint": "7.9.x",
    "husky": "4.3.x",
    "lint-staged": "10.4.x",
    "prettier": "2.1.x",
    "prettier-plugin-packagejson": "2.2.x",
    "tsdx": "0.13.3",
    "tslib": "2.0.x",
    "typescript": "4.0.x"
  },
  "engines": {
    "node": ">=10"
  }
}
